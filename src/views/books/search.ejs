<%- include ../partials/header.ejs %>

<ul class="book-list" id="search-books">
  <% if(books){ %>
    <% books.forEach(function(book) { %>
      <li>
        <a href="/books/<%=book.id%>">
          <img class="book-list-image" src=<%=book.img_url%>>
          <div class="search-title">
            <%=book.title%>
          </div>
        </a>
        <div class="search-author">
          <%=book.first_name%> <%=book.last_name%>
        </div>
        <div class="search-price">
          <%=book.price%>
        </div>
      </li>
    <% }) %>
    <% offset = parseInt(offset)%>
    <% if (offset >= 10) { %>
      <% let previous = offset - 10 %>
      <div id="search-prev-page">
        <a href="search?search=<%=searchTerm%>&amp;start=<%=previous%>">
          Prev Page
        </a>
      </div>
    <% } %>
    <% offset += 10 %>
    <div id="search-next-page">
      <a href="search?search=<%=searchTerm%>&amp;start=<%=offset%>">
        Next Page
      </a>
    </div>
  <% } %>
</ul>

<%- include ../partials/footer.ejs %>
