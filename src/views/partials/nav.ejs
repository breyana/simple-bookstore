<nav>
  <a href="/">Home</a>
  <form method="get" action="/books/search" id="search-bar">
    <input name="search" type="search" placeholder="Search for Author, Title, or Genre" autofocus/>
    <input type="submit" value="Search"/>
  </form>
  <% if(cart) { %>
    <button type="button" class="open-cart">Cart (<%=cart.length%>)</button>
  <% } else { %>
    <button type="button" class="open-cart">Cart (0)</button>
  <% } %>
  <%- include ../partials/modal.ejs %>
  <% if (role === 'admin') {%>
    <a href="/admin">Admin</a>
  <% } %>
  <% if (session) {%>
    <a href="/logout">Log Out</a>
  <% } else { %>
    <a href="/signup">Sign Up</a>
    <a href="/login">Log In</a>
  <% } %>
</nav>
